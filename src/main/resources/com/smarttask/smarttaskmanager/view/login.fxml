<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.smarttask.smarttaskmanager.controller.LoginController">

    <VBox alignment="CENTER" maxWidth="380" spacing="20.0"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;">

        <effect>
            <DropShadow radius="15.0" offsetX="0.0" offsetY="5.0">
                <color>
                    <Color opacity="0.3"/>
                </color>
            </DropShadow>
        </effect>

        <Label text="Smart Task Manager" textFill="#2c3e50">
            <font>
                <Font name="Segoe UI Bold" size="26.0"/>
            </font>
        </Label>

        <Label text="Veuillez vous connecter" textFill="#7f8c8d">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>

        <Label minHeight="10"/>

        <TextField fx:id="emailField" promptText="Adresse Email"
                   style="-fx-background-color: #f0f2f5; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px; -fx-border-color: transparent;"/>

        <PasswordField fx:id="passwordField" promptText="Mot de passe"
                       style="-fx-background-color: #f0f2f5; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;"/>

        <Button text="SE CONNECTER" onAction="#handleLogin" defaultButton="true" maxWidth="Infinity"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 12;">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>

        <Label fx:id="errorLabel" visible="false" textFill="#e74c3c" wrapText="true" style="-fx-font-size: 12px;"/>

        <Hyperlink text="Pas de compte ? S'inscrire ici" onAction="#handleGoToRegister"
                   style="-fx-text-fill: #3498db; -fx-font-size: 13px; -fx-underline: true; -fx-border-color: transparent;"/>

    </VBox>

</StackPane>